---
import BaseLayout from '../layouts/BaseLayout.astro';

const title = 'J. R. Hernandez · Heat Shock Pineapple';
const description =
  'Hub for my work in science, code, and photography — a single place to jump into the portfolio, photos, and journal.';
---

<BaseLayout {title} {description}>
  <div class="hub-glow"></div>

  <div class="hub-wrapper">
    <header class="hub-header">
      <a href="/" class="hub-logo">
        <img src="/logo.png" alt="Heat Shock Pineapple logo" />
        J. R. Hernandez
      </a>
      <a href="mailto:jrh@heatshockpineapple.com" class="hub-contact-link">Contact</a>
    </header>

    <section class="hub-intro">
      <p class="hub-intro-eyebrow">Experiments, code, and light.</p>
      <p class="hub-intro-text">
        I'm Jason Hernandez, a scientist and photographer exploring proteins, data,
        and the way light hits real life.
      </p>
    </section>

    <main class="hub-stack">
      <a href="https://portfolio.heatshockpineapple.com" class="hub-card hub-t-research">
        <div class="hub-card-content">
          <div>
            <span class="hub-lbl">01 // Research</span>
            <h2 class="hub-tit">Portfolio</h2>
            <p class="hub-desc">
              Molecular logic, NGL protein visualization, and biochemical R&amp;D.
            </p>
          </div>
          <div class="hub-btn">View Case Studies</div>
        </div>
        <div class="hub-card-img-box">
          <img src="/images/IMG_9577.jpg" class="hub-img-fill" alt="Research" />
        </div>
      </a>

      <a href="https://photos.heatshockpineapple.com" class="hub-card hub-t-photos">
        <div class="hub-card-content">
          <div>
            <span class="hub-lbl">02 // Visuals</span>
            <h2 class="hub-tit">Photography</h2>
            <p class="hub-desc">
              Capturing light, landscapes, and the quiet moments in between.
            </p>
          </div>
          <div class="hub-btn">Enter Gallery</div>
        </div>
        <div class="hub-card-img-box">
          <img src="/images/photo2.jpg" class="hub-img-fill" alt="Photography" />
        </div>
      </a>

      <a href="https://blog.heatshockpineapple.com" class="hub-card hub-t-journal">
        <div class="hub-card-content">
          <div>
            <span class="hub-lbl">03 // Field Notes</span>
            <h2 class="hub-tit">Journal</h2>
            <p class="hub-desc">
              Essays on complexity, learning, and the scientific process.
            </p>
          </div>
          <div class="hub-btn">Read Essays</div>
        </div>
        <div class="hub-card-img-box">
          <img src="/images/image3.jpg" class="hub-img-fill" alt="Journal" />
        </div>
      </a>
    </main>

    <footer class="hub-footer">
      <div>© 2025 HEAT SHOCK PINEAPPLE</div>
      <div class="hub-footer-links">
        <a href="#">GitHub</a>
        <a href="#">LinkedIn</a>
      </div>
    </footer>
  </div>
</BaseLayout>