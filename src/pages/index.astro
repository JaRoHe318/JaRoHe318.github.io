---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const title = 'J. R. Hernandez · Heat Shock Pineapple';
const description =
  'Hub for my work in science, code, and photography — a single place to jump into the portfolio, photos, and journal.';
---

<BaseLayout {title} {description}>
  <Header />

  <div class="hub-glow"></div>

  <main class="hub-wrapper">
    
    <section class="hub-intro">
      <!-- <p class="hub-intro-eyebrow">Experiments, code, and light.</p> -->
      <p class="hub-intro-text">
        Welcome to my personal hub!
      </p>
    </section>

    <div class="hub-stack">
      <a href="https://portfolio.heatshockpineapple.com" class="hub-card hub-t-research">
        <div class="hub-card-content">
          <div>
            <span class="hub-lbl">01 // Research</span>
            <h2 class="hub-tit">Portfolio</h2>
            <p class="hub-desc">
              Protein Biochemistry and Data analysis 
            </p>
          </div>
          <div class="hub-btn">View Case Studies</div>
        </div>
        <div class="hub-card-img-box">
          <img src="/images/IMG_9577.jpg" class="hub-img-fill" alt="Research" />
        </div>
      </a>

      <a href="https://photos.heatshockpineapple.com" class="hub-card hub-t-photos">
        <div class="hub-card-content">
          <div>
            <span class="hub-lbl">02 // Visuals</span>
            <h2 class="hub-tit">Photography</h2>
            <p class="hub-desc">
              Collection of my favorite moments
            </p>
          </div>
          <div class="hub-btn">Enter Gallery</div>
        </div>
        <div class="hub-card-img-box">
          <img src="/images/photo2.jpg" class="hub-img-fill" alt="Photography" />
        </div>
      </a>

      <a href="https://blog.heatshockpineapple.com" class="hub-card hub-t-journal">
        <div class="hub-card-content">
          <div>
            <span class="hub-lbl">03 // Blog</span>
            <h2 class="hub-tit">Protocols</h2>
            <p class="hub-desc">
              Posts on things I find interesting
            </p>
          </div>
          <div class="hub-btn">Read Entries</div>
        </div>
        <div class="hub-card-img-box">
          <img src="/images/image3.jpg" class="hub-img-fill" alt="Protocols" />
        </div>
      </a>
    </div>

  </main>

  <Footer />
</BaseLayout>