---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

// 1. Import Astro's Image component
import { Image } from 'astro:assets';

// 2. Import your images from src/assets
// (Make sure you moved them from public/ to src/assets/)
import researchImg from '../assets/IMG_9577.jpg';
import photoImg from '../assets/photo2.jpg';
import protocolsImg from '../assets/image3.jpg';

const title = 'J. R. Hernandez · Heat Shock Pineapple';
const description =
  'Hub for my work in science, code, and photography — a single place to jump into the portfolio, photos, and journal.';

// 3. Define responsive sizing logic (ChatGPT's recommendation)
// Desktop: Image is ~43% of card width. Mobile: 100% width.
const cardWidths = [360, 480, 640, 800];
const cardSizes = "(min-width: 700px) 480px, 100vw";
---

<BaseLayout {title} {description}>
  <Header />

  <div class="hub-glow"></div>

  <div class="hub-wrapper">
    
    <section class="hub-intro">
      <p class="hub-intro-text">
        Welcome to my personal hub!
      </p>
    </section>

    <div class="hub-stack">
      
      <a href="https://portfolio.heatshockpineapple.com" class="hub-card hub-t-research">
        <div class="hub-card-content">
          <div>
            <span class="hub-lbl">01 // Research</span>
            <h2 class="hub-tit">Portfolio</h2>
            <p class="hub-desc">
              Protein Biochemistry and Data analysis 
            </p>
          </div>
          <div class="hub-btn">View Case Studies</div>
        </div>
        <div class="hub-card-img-box">
          <Image 
            src={researchImg} 
            alt="Protein Biochemistry Research" 
            class="hub-img-fill"
            widths={cardWidths}
            sizes={cardSizes}
          />
        </div>
      </a>

      <a href="https://photos.heatshockpineapple.com" class="hub-card hub-t-photos">
        <div class="hub-card-content">
          <div>
            <span class="hub-lbl">02 // Visuals</span>
            <h2 class="hub-tit">Photography</h2>
            <p class="hub-desc">
              Collection of my favorite moments
            </p>
          </div>
          <div class="hub-btn">Enter Gallery</div>
        </div>
        <div class="hub-card-img-box">
          <Image 
            src={photoImg} 
            alt="Photography Gallery" 
            class="hub-img-fill"
            widths={cardWidths}
            sizes={cardSizes}
          />
        </div>
      </a>

      <a href="https://blog.heatshockpineapple.com" class="hub-card hub-t-journal">
        <div class="hub-card-content">
          <div>
            <span class="hub-lbl">03 // Blog</span>
            <h2 class="hub-tit">Protocols</h2>
            <p class="hub-desc">
              Posts on things I find interesting
            </p>
          </div>
          <div class="hub-btn">Read Entries</div>
        </div>
        <div class="hub-card-img-box">
          <Image 
            src={protocolsImg} 
            alt="Laboratory protocols" 
            class="hub-img-fill"
            widths={cardWidths}
            sizes={cardSizes}
          />
        </div>
      </a>
    </div>

  </div>

  <Footer />
</BaseLayout>