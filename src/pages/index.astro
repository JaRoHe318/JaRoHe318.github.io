---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

// Astro assets
import { Image } from 'astro:assets';

// Images (from src/assets)
import researchImg from '../assets/IMG_9577.jpg';
import photoImg from '../assets/photo2.jpg';
import protocolsImg from '../assets/image3.jpg';

const title = 'J. R. Hernandez · Heat Shock Pineapple';
const description =
  'J. R. Hernandez — biochemistry, computation, and photography. Portfolio, photos, and Heat Shock Protocols.';

// Responsive image sizing for card images
const cardWidths = [360, 480, 640, 800];
const cardSizes = '(min-width: 700px) 480px, 100vw';
---

<BaseLayout {title} {description}>
  <Header />

  <div class="hub-glow"></div>

  <div class="hub-wrapper">
    <section class="hub-intro">
      <p class="hub-intro-eyebrow">J. R. Hernandez</p>

      <h1 class="hub-intro-text">
        Biochemistry, computation,<br />and photography.
      </h1>

      <p class="hub-intro-sub">
        I work with proteins, write code, and take photographs.
        <span class="hub-intro-subline">This site brings those threads together in one place.</span>
      </p>
    </section>

    <div class="hub-stack">
      <a
        href="https://portfolio.heatshockpineapple.com"
        class="hub-card hub-t-research"
        aria-label="Open portfolio"
      >
        <div class="hub-card-content">
          <div>
            <!-- <span class="hub-lbl">01 // Research</span> -->
            <h2 class="hub-tit">Portfolio</h2>
            <p class="hub-desc">
              An overview of my research, technical work, and analysis in protein biochemistry.
            </p>
          </div>
          <div class="hub-btn">View Work</div>
        </div>

        <div class="hub-card-img-box">
          <Image
            src={researchImg}
            alt="Protein biochemistry research"
            class="hub-img-fill"
            widths={cardWidths}
            sizes={cardSizes}
          />
        </div>
      </a>

      <a
        href="https://photos.heatshockpineapple.com"
        class="hub-card hub-t-photos"
        aria-label="Open photography gallery"
      >
        <div class="hub-card-content">
          <div>
            <!-- <span class="hub-lbl">02 // Visuals</span> -->
            <h2 class="hub-tit">Photography</h2>
            <p class="hub-desc">
              Photographs of people, places, and everyday moments, taken along the way.
            </p>
          </div>
          <div class="hub-btn">View Photos</div>
        </div>

        <div class="hub-card-img-box">
          <Image
            src={photoImg}
            alt="Photography gallery"
            class="hub-img-fill"
            widths={cardWidths}
            sizes={cardSizes}
          />
        </div>
      </a>

      <a
        href="https://blog.heatshockpineapple.com"
        class="hub-card hub-t-journal"
        aria-label="Open Heat Shock Protocols"
      >
        <div class="hub-card-content">
          <div>
            <!-- <span class="hub-lbl">03 // Writing</span> -->
            <h2 class="hub-tit">Blog</h2>
            <p class="hub-desc">
              Notes on experiments, code, and tools, written while working through them.
            </p>
          </div>
          <div class="hub-btn">Read Protocols</div>
        </div>

        <div class="hub-card-img-box">
          <Image
            src={protocolsImg}
            alt="Heat Shock Protocols"
            class="hub-img-fill"
            widths={cardWidths}
            sizes={cardSizes}
          />
        </div>
      </a>
    </div>
  </div>

  <Footer />
</BaseLayout>